<div class="reports-page">
    <div class="report-actions no-print">
        <form action="/reports" method="GET" class="filter-form">
            <div class="filter-group">
                <label>Bulan:</label>
                <select name="month" class="form-control-sm">
                    <option value="">Semua Bulan</option>
                    <% const months=['Januari', 'Februari' , 'Maret' , 'April' , 'Mei' , 'Juni' , 'Juli' , 'Agustus'
                        , 'September' , 'Oktober' , 'November' , 'Desember' ]; %>
                        <% months.forEach((m, i)=> { %>
                            <option value="<%= String(i + 1).padStart(2, '0') %>" <%=filters.month===String(i +
                                1).padStart(2, '0' ) ? 'selected' : '' %>><%= m %>
                            </option>
                            <% }) %>
                </select>
            </div>
            <div class="filter-group">
                <label>Tahun:</label>
                <select name="year" class="form-control-sm">
                    <% const currentYear=new Date().getFullYear(); %>
                        <option value="">Semua Tahun</option>
                        <% for(let y=currentYear; y>= currentYear - 5; y--) { %>
                            <option value="<%= y %>" <%=filters.year==y ? 'selected' : '' %>><%= y %>
                            </option>
                            <% } %>
                </select>
            </div>
            <button type="submit" class="btn-primary-sm"><i class="fas fa-filter"></i> Filter</button>
            <a href="/reports" class="btn-secondary-sm">Reset</a>
        </form>
        <div class="action-buttons">
            <a href="/reports/export?month=<%= filters.month %>&year=<%= filters.year %>" class="btn-excel">
                <i class="fas fa-file-excel"></i> Export Excel
            </a>
            <button onclick="window.print()" class="btn-print"><i class="fas fa-print"></i> Cetak PDF</button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-grid">
        <div class="card bg-blue">
            <h3>Kas Perumahan</h3>
            <div class="balance-item">
                <small>Saldo Awal:</small> <span>Rp <%= formatNumber(summary.housing.initial) %></span>
            </div>
            <div class="flex-between mt-1">
                <span>Masuk: Rp <%= formatNumber(summary.housing.in) %></span>
                <span>Keluar: Rp <%= formatNumber(summary.housing.out) %></span>
            </div>
            <hr>
            <p>Saldo Akhir: <strong>Rp <%= formatNumber(summary.housing.balance) %></strong></p>
        </div>
        <div class="card bg-orange">
            <h3>Dana Sosial</h3>
            <div class="balance-item">
                <small>Saldo Awal:</small> <span>Rp <%= formatNumber(summary.social.initial) %></span>
            </div>
            <div class="flex-between mt-1">
                <span>Masuk: Rp <%= formatNumber(summary.social.in) %></span>
                <span>Keluar: Rp <%= formatNumber(summary.social.out) %></span>
            </div>
            <hr>
            <p>Saldo Akhir: <strong>Rp <%= formatNumber(summary.social.balance) %></strong></p>
        </div>
        <div class="card bg-green">
            <h3>Kas RT</h3>
            <div class="balance-item">
                <small>Saldo Awal:</small> <span>Rp <%= formatNumber(summary.rt.initial) %></span>
            </div>
            <div class="flex-between mt-1">
                <span>Masuk: Rp <%= formatNumber(summary.rt.in) %></span>
                <span>Keluar: Rp <%= formatNumber(summary.rt.out) %></span>
            </div>
            <hr>
            <p>Saldo Akhir: <strong>Rp <%= formatNumber(summary.rt.balance) %></strong></p>
        </div>
        <div class="card bg-gold">
            <h3>Total Kas Keseluruhan</h3>
            <div class="balance-item">
                <small>Saldo Awal:</small> <span>Rp <%= formatNumber(summary.total.initial) %></span>
            </div>
            <div class="flex-between mt-1">
                <span>Total Masuk: Rp <%= formatNumber(summary.total.in) %></span>
                <span>Total Keluar: Rp <%= formatNumber(summary.total.out) %></span>
            </div>
            <hr>
            <p>Saldo Akhir: <strong>Rp <%= formatNumber(summary.total.balance) %></strong></p>
        </div>
    </div>

    <!-- Mutations Table -->

    <!-- Mutations Table -->
    <div class="card mt-4">
        <div class="card-header">
            <h3>Rincian Transaksi</h3>
        </div>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tanggal</th>
                        <th>Keterangan</th>
                        <th>Warga</th>
                        <th>Sumber Dana</th>
                        <th>Kategori</th>
                        <th>Masuk</th>
                        <th>Keluar</th>
                        <th>Bukti</th>
                    </tr>
                </thead>
                <tbody>
                    <% mutations.forEach(m=> { %>
                        <tr>
                            <td>
                                <%= new Date(m.date).toLocaleDateString('id-ID') %>
                            </td>
                            <td>
                                <%= m.description %>
                            </td>
                            <td>
                                <%= m.resident_name || '-' %>
                            </td>
                            <td>
                                <% if(m.fund_type==='housing' ) { %> <span class="badge bg-blue-light">Perumahan</span>
                                    <% } %>
                                        <% if(m.fund_type==='social' ) { %> <span
                                                class="badge bg-orange-light">Sosial</span>
                                            <% } %>
                                                <% if(m.fund_type==='rt' ) { %> <span
                                                        class="badge bg-green-light">RT</span>
                                                    <% } %>
                                                        <% if(m.fund_type==='multiple' ) { %> <span
                                                                class="badge bg-gold-light">Semua Kas</span>
                                                            <% } %>
                            </td>
                            <td><span class="badge">
                                    <%= m.category %>
                                </span></td>
                            <td class="text-success">
                                <%= m.type==='in' ? 'Rp ' + formatNumber(m.amount) : '-' %>
                            </td>
                            <td class="text-danger">
                                <%= m.type==='out' ? 'Rp ' + formatNumber(m.amount) : '-' %>
                            </td>
                            <td>
                                <% if (m.proof_image) { %>
                                    <a href="/uploads/<%= m.proof_image %>" target="_blank" class="btn-proof">
                                        <i class="fas fa-image"></i>
                                    </a>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

