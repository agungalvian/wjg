<div class="admins-page">
    <div class="actions-bar">
        <h3>Daftar Administrator</h3>
        <% if (user.role==='admin' ) { %>
            <button class="btn-primary" onclick="document.getElementById('addAdminModal').style.display='block'">
                <i class="fas fa-user-shield"></i> Tambah Admin
            </button>
            <% } %>
    </div>

    <% if (typeof error !=='undefined' || (typeof req !=='undefined' && req.query.error)) { %>
        <div class="alert alert-danger">
            <%= error || req.query.error %>
        </div>
        <% } %>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Nama Lengkap</th>
                            <th>Role</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admins.forEach(admin=> { %>
                            <tr>
                                <td>
                                    <%= admin.username %>
                                </td>
                                <td>
                                    <%= admin.full_name %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= admin.role %>">
                                        <%= admin.role==='admin' ? 'Administrator' : 'View Only' %>
                                    </span>
                                </td>
                                <td>
                                    <% if (admin.id !==user.id && user.role==='admin' ) { %>
                                        <button class="btn-sm btn-info"
                                            onclick="openEditModal('<%= admin.id %>', '<%= admin.username %>', '<%= admin.full_name %>', '<%= admin.role %>')">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <a href="/admins/delete/<%= admin.id %>" class="btn-sm btn-danger-sm"
                                            onclick="return confirm('Yakin ingin menghapus admin ini?')">
                                            <i class="fas fa-trash"></i> Hapus
                                        </a>
                                        <% } else if (admin.id===user.id) { %>
                                            <button class="btn-sm btn-info"
                                                onclick="openEditModal('<%= admin.id %>', '<%= admin.username %>', '<%= admin.full_name %>', '<%= admin.role %>')">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <span class="badge badge-info ml-2">Anda</span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                                <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
</div>

<% if (user.role==='admin' ) { %>
    <!-- Add Admin Modal -->
    <div id="addAdminModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="document.getElementById('addAdminModal').style.display='none'">&times;</span>
            <h3>Tambah Admin Baru</h3>
            <form action="/admins/add" method="POST">
                <div class="form-group">
                    <label>Nama Lengkap</label>
                    <input type="text" name="full_name" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="username" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select name="role" class="form-control" required>
                        <option value="admin">Administrator (Akses Penuh)</option>
                        <option value="viewer">View Only (Hanya Lihat)</option>
                    </select>
                </div>
                <button type="submit" class="btn-primary w-100">Simpan Admin</button>
            </form>
        </div>
    </div>

    <!-- Edit Admin Modal -->
    <div id="editAdminModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="document.getElementById('editAdminModal').style.display='none'">&times;</span>
            <h3>Edit Admin</h3>
            <form action="/admins/update" method="POST">
                <input type="hidden" name="id" id="edit_id">
                <div class="form-group">
                    <label>Nama Lengkap</label>
                    <input type="text" name="full_name" id="edit_full_name" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="username" id="edit_username" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Password Baru (Kosongkan jika tidak ingin mengubah)</label>
                    <input type="password" name="password" class="form-control">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select name="role" id="edit_role" class="form-control" required>
                        <option value="admin">Administrator (Akses Penuh)</option>
                        <option value="viewer">View Only (Hanya Lihat)</option>
                    </select>
                </div>
                <button type="submit" class="btn-primary w-100">Simpan Perubahan</button>
            </form>
        </div>
    </div>
    <% } %>

        <script>
            function openEditModal(id, username, fullName, role) {
                document.getElementById('edit_id').value = id;
                document.getElementById('edit_username').value = username;
                document.getElementById('edit_full_name').value = fullName;
                document.getElementById('edit_role').value = role;
                document.getElementById('editAdminModal').style.display = 'block';
            }
        </script>

        <style>
            .actions-bar {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
            }

            .table-container {
                background: white;
                padding: 1.5rem;
                border-radius: 1rem;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th,
            td {
                padding: 1rem;
                text-align: left;
                border-bottom: 1px solid #eee;
            }

            .btn-danger-sm {
                color: #f56565;
                text-decoration: none;
                font-size: 0.9rem;
            }

            .modal {
                display: none;
                position: fixed;
                z-index: 100;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.4);
            }

            .modal-content {
                background-color: #fefefe;
                margin: 10% auto;
                padding: 20px;
                width: 400px;
                border-radius: 1rem;
            }

            .btn-info {
                background-color: #3182ce;
                color: white;
                border: none;
                padding: 0.25rem 0.5rem;
                border-radius: 0.25rem;
                cursor: pointer;
                margin-right: 0.5rem;
                text-decoration: none;
                font-size: 0.9rem;
            }

            .btn-info:hover {
                background-color: #2b6cb0;
            }

            .ml-2 {
                margin-left: 0.5rem;
            }

            .close {
                float: right;
                font-size: 28px;
                cursor: pointer;
            }
        </style>